<?xml version="1.0" encoding="UTF-8"?>
<numericalExperiment documentVersion="1" control="false" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 Z:\CIM\XSDs\dev0p3\activity.xsd" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco">

	<rationale>Climate change detection attribution experiment. </rationale>
	<description>Historical simulation but with other individual forcing agent: stratospheric ozone.</description>
	
	<!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.002</id>
        <name xsi:type="Identifier">7.3E.ic</name>
        <description> Initial conditions are from experiment 3.1 piControl </description>
    </numericalRequirement>
    
    <!-- Boundary/Forcing conditions -->
	<numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.001</id>
        <name xsi:type="Identifier">7.3E.bc.wmg_conc</name>
        <description>Prescribed atmospheric concentrations of pre-industrial well mixed gases:
            excluding CO2</description>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.002</id>
        <name xsi:type="Identifier">7.3E.bc.CO2_conc</name>
        <description>Prescribed atmospheric concentrations of pre-industrial well mixed gas: Carbon
            Dioxide</description>
    </numericalRequirement>
    
	<numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.003</id>
        <name xsi:type="Identifier">7.3E.bc.sls_conc</name>
        <description>Prescribed atmospheric concentration of pre-industrial short lived (reactive)
            gas species</description>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">7.3E.bc.nat_aer</name>
        <description>Prescribed concentrations or emissions of pre-industrial natural aerosols</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.004</id>
            <name xsi:type="Identifier">7.3E.bc.nat_aer_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.007</id>
            <name xsi:type="Identifier">7.3E.bc.nat_aer_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">7.3E.bc.nat_aer_precur</name>
        <description>Prescribed concentrations or emissions of pre-industrial natural aerosol precursors</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.005</id>
            <name xsi:type="Identifier">7.3E.bc.nat_aer_pre_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.008</id>
            <name xsi:type="Identifier">7.3E.bc.nat_aer_pre_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement> 
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <name xsi:type="Identifier">7.3E.bc.sl_aer</name>
        <description>Prescribed concentrations or emissions of pre-industrial short lived (reactive) aerosol species</description>
        <requirementOption>
            <id xsi:type="Identifier">bc.006</id>
            <name xsi:type="Identifier">7.3E.bc.sl_aer_conc</name>
            <description>Concentrations</description>            
        </requirementOption>
        <requirementOption>
            <id xsi:type="Identifier">bc.009</id>
            <name xsi:type="Identifier">7.3E.bc.sl_aer_em</name>
            <description>Emissions</description>            
        </requirementOption>
    </numericalRequirement>
            
    <numericalRequirement xsi:type="BoundaryCondition">
		<id xsi:type="Identifier">bc.062</id>
		<name xsi:type="Identifier">7.3E.bc.SO></name>
		<description>Impose changing conditions of stratospheric ozone</description>
    </numericalRequirement>
    
    <numericalRequirement>
        <id xsi:type="Identifier">bc.161</id>
        <name xsi:type="Identifier">7.3E.SO.ensemble</name>
        <description>Create multi-member ensembles initialised from different points in the control run</description>
    </numericalRequirement>
    <!--   
        Other forcing agents, need to decide how best to record these in the questionnaire.
        Sd anthropogenic sulfate aerosol, accounting only for direct effects 
        Si anthropogenic sulfate aerosol, accounting only for indirect effects 
        Sa (= Sd + Si) anthropogenic sulfate aerosol direct and indirect effects 
        To tropospheric ozone 
        So stratospheric ozone 
        Oz (= To + So) ozone (= tropospheric and stratospheric ozone) 
        Lu land-use change  
        Sl solar irradiance (note: Sl is “S” followed by a lower case “L”, not an upper case “I”)  
        Vl volcanic aerosol (note: Vl is “V” followed by a lower case “L”, not an upper case “I”)  
        Ss sea salt  
        Ds Dust  
        Bc black carbon  
        Md mineral dust  
        Oc organic carbon  
        Aa anthropogenic aerosols (a mixture of aerosols, not explicitly defined here)   
    -->
   
   
	<shortName>
		7.3E historicalSO
	</shortName>
    <longName> 
		7.3E stratospheric ozone-only historical - ensemble
	</longName>
     
   <calendar>
       <realCalendar/>
	</calendar>
    <numericalRequirement xsi:type="SpatioTemporalConstraint"><name xsi:type="Identifier">7.3E.stc.1850_156yr</name><id xsi:type="Identifier">stc.026</id><description>Begin in 1850 and run for 156 years </description><requiredDuration xsi:type="ClosedDateRange">
		<!-- Idealised run so dates given here are only dummy values -->
		<startDate> 1850-01-01T00:00:00Z</startDate>
		<endDate> 2006-01-01T00:00:00Z</endDate>
        <length units="years">156</length>
	</requiredDuration></numericalRequirement>
