<?xml version="1.0" encoding="UTF-8"?>
<numericalExperiment documentVersion="4" control="true"
    xmlns="http://www.metaforclimate.eu/cim/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 C:\Users\clp73\Desktop\Metafor\subversion\CIM\branches\dev0p3\activity.xsd"
    xmlns:xlink="http://www.w3.org/1999/xlink" 
    xmlns:gmd="http://www.isotc211.org/2005/gmd"
    xmlns:gco="http://www.isotc211.org/2005/gco">
    
    <rationale>
        Diagnostic experiment for understanding the long-term simulations.
        Hansen experiment with prescribed SST to diagnose the super fast response to [CO2]. 
        This is the baseline control for experiment 6.2b and 6.3. 
    </rationale>
    <description> 
        AMIP-style experiment with control run climatological SSTs and sea ice.
    </description>
    <!--* results for all months including initial transient period
        * for at least 1 year in the first 25 years the following 
        diagnostics must be made:
        - estimate radiative forcing at the top and bottom of the 
        atmosphere
        - for 2 calls to radiation
        - 1x[CO2]
        - 4X[CO2]
        - only the 1X[CO2] heating rates are applied to the model -->
    
    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.002</id>
        <name xsi:type="Identifier">6.2a.ic</name>
        <description> Initial conditions are from experiment 3.1_piControl </description>
    </numericalRequirement>
    
    <!-- Boundary Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.002</id>
        <name xsi:type="Identifier">6.2a.bc.CO2.conc</name>
        <description>Prescribed concentration of well mixed Gas: CO2 is the same as experiment 3.1_piControl</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.052</id>
        <name xsi:type="Identifier">6.2a.sst.clim</name>
        <description>Sea surface temperature is the climatology SST from experiment 3.1_piControl</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.053</id>
        <name xsi:type="Identifier">6.2a.SeaIce.clim</name>
        <description>Sea ice is the sea ice climatology from experiment 3.1_piControl</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.010</id>
        <name xsi:type="Identifier">6.2a.bc.LandUse</name>
        <description>Unperturbed Land Use is the same as for experiment 3.1_piControl</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.054</id>
        <name xsi:type="Identifier">6.2a.bc.Ocean_CO2</name>
        <description>CO2 partial pressure dissolved in ocean, climatology from experiment 3.1_piControl</description>
    </numericalRequirement>
    <numericalRequirement xsi:type="SpatioTemporalConstraint">
        <outputPeriod>for one year between year 0 and year 25</outputPeriod>
        <outputFrequency>monthly</outputFrequency>
        <numericalRequirement xsi:type="BoundaryCondition">
            <id xsi:type="Identifier">bc.055</id>
            <name xsi:type="Identifier">6.2a.bc.4XCO2.conc</name>
            <description>Instantaneous quadrupling of CO2 concentration applied to radiation scheme</description>
        </numericalRequirement>
        <numericalRequirement>
            <id xsi:type="Identifier">bc.002</id>
            <name xsi:type="Identifier">6.2a.bc.CO2.conc</name>
            <description>Pre-Industrial CO2 concentration applied to a second call of the radiation scheme</description>
        </numericalRequirement>
    </numericalRequirement>
    
    <shortName>
		6.2a sstClim
	</shortName>
    <longName>
		6.2a Control SST Climatology
	</longName>
    
    <Calendar>
        <PerpetualPeriod/>
    </Calendar>
    <requiredDuration xsi:type="ClosedDateRange">
        <startDate>1850-01-01T00:00:00Z</startDate>
        <endDate>1850-30-12T00:00:00Z</endDate>
        <lengthYears>30</lengthYears>
    </requiredDuration>
