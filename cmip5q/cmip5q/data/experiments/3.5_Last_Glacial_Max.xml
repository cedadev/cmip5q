<numericalExperiment documentVersion="1" control="true" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 Z:\CIM\XSDs\dev0p3\activity.xsd" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco">

	<rationale>Compare paleodata with the model response to ice age boundary conditions.</rationale>
	<description>
		Consistent with PMIP (Paleo Model Intercomparison Project) requirements.
		Impose Last Glacial Maximum (21 kyrs ago) conditions including ice sheets and atmospheric concentrations of well-mixed greenhouse gasses. 
	</description>

	<!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.001</id>
        <name xsi:type="Identifier">3.5.ic</name>
        <description>A description of initial condition for the control run</description>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="InitialCondition">
        <id xsi:type="Identifier">ic.022</id>
        <name xsi:type="Identifier">3.5.ic.pmip_oc</name>
        <description>Ocean initiialised from a cold spun-up state provided by PMIP</description>
    </numericalRequirement>
    

    <!-- Boundary/Forcing Conditions -->
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.072</id>
        <name>3.5.bc.LGMwmg</name>
        <description>Impose last glacial maximum conditions of well-mixed gases</description>
    </numericalRequirement>
    
    <numericalRequirement xsi:type="BoundaryCondition">
        <id xsi:type="Identifier">bc.073</id>
        <name>3.5.bc.LGMice</name>
        <description>Impose last glacial maximum ice sheet conditions supplied by PMIP (requiring changes to surface elevation, land surface type, and land fraction)</description>
    </numericalRequirement>
    
      
	<shortName>
		3.5 LGM
	</shortName>
    <longName> 
		Last glacial maximum
	</longName>
	
    <calendar>
    	<perpetualPeriod></perpetualPeriod>
