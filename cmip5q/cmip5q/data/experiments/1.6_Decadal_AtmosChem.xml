<?xml version="1.0" encoding="UTF-8"?>
<numericalExperiment documentVersion="1" control="false" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 Z:\CIM\XSDs\dev0p3\activity.xsd" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gco="http://www.isotc211.org/2005/gco">
    
    <!-- Note - Experiment not yet fully formulated! -->
    <!-- Notes from document - 
        The chemistry/aerosol community plans to put together experiments with short-lived species and pollutants (probably two to three years hence)
    -->
    
    <rationale> To explore the degree to which future climate states depend on the initial climate state (from 'A Summary of the CMIP5 Experiment Design' by Karl Taylor et al. 2008)</rationale>
    <Why/>
    
    <!-- Initial Conditions -->
    <numericalRequirement xsi:type="InitialCondition">
        <description>Ocean Initial Conditions must represent in some measure the observed anomolies for the start date</description>
        <id xsi:type="Identifier">1.6.ic.oc</id>
    </numericalRequirement>
    
    <!-- Boundary/Forcing Conditions -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of well mixed gases (anthropogenic)</description>
        <id xsi:type="Identifier">1.6.bc.wmg_anth</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of well mixed gases (volcanic)</description>
        <id xsi:type="Identifier">1.6.bc.wmg_volc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description> Detailed concentrations of short lived gas species</description>
        <id xsi:type="Identifier">1.6.bc.sls_conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed emissions of short lived gas species</description>
        <id xsi:type="Identifier">1.6.bc.sls_em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of aerosols (natural)</description>
        <id xsi:type="Identifier">1.6.bc.nat_aer_conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of aerosols (anthropogenic)</description>
        <id xsi:type="Identifier">1.6.bc.anthr_aer_conc</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed emissions of aerosols (natural)</description>
        <id xsi:type="Identifier">1.6.bc.nat_aer_em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed emissions of aerosols (anthropogenic)</description>
        <id xsi:type="Identifier">1.6.bc.anthr_aer_em</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of aerosol (natural) precursors</description>
        <id xsi:type="Identifier">1.6.bc.nat_aer_prec</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Detailed concentrations of aerosol (anthropogenic) precursors</description>
        <id xsi:type="Identifier">1.6.bc.anthro_aer_prec</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing solar forcing</description>
        <id xsi:type="Identifier">1.6.bc.solar</id>
    </numericalRequirement>           
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Imposed changing land use</description>
        <id xsi:type="Identifier">1.6.bc.land</id>
    </numericalRequirement>
    <!-- Treatment of Volcanic aerosol beyond 2005 (i.e. should assume no volcanic eruptions after 2005) may be able to be checked in software/data but am including here in case -->
    <numericalRequirement xsi:type="BoundaryCondition">
        <description> No volcanic aerosol emissions beyond 2005 </description>
        <id xsi:type="Identifier">1.6.bc.NoVolc2005</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description>Sea ice observations forcing (unless modelled) must precede start date of simulation </description>
        <id xsi:type="Identifier">1.6.bc.seaice</id>
    </numericalRequirement>
    <numericalRequirement xsi:type="BoundaryCondition">
        <description> For future dates, the RCP4.5 scenario should be used</description>
        <id xsi:type="Identifier">1.6.bc.rcp4.5</id>
    </numericalRequirement>
    
    <shortName>
